<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_magenta_gradient">

    <!-- Header -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/telekom_logo"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T-Buddy"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Status pill -->
    <TextView
        android:id="@+id/accessibilityStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accessibility: OFF"
        android:textColor="@android:color/white"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Explanation + action -->
    <LinearLayout
        android:id="@+id/permCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/accessibilityStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/permTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Accessibility"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/permDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="T-Buddy needs Accessibility to coach you across apps. Weâ€™ll take you straight to the right screen."
            android:textColor="@color/fg_subtle"
            android:textSize="14sp"/>

        <!-- Button initially disabled -->
        <Button
            android:id="@+id/btnEnable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Open Accessibility for T-Buddy"
            android:enabled="false" />

        <CheckBox
            android:id="@+id/cbBiometrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/consent_biometrics"
            android:textColor="@color/fg_subtle"
            android:textSize="14sp"
            android:buttonTint="@color/fg_white" />

        <CheckBox
            android:id="@+id/cbPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/consent_privacy"
            android:textColor="@color/fg_subtle"
            android:textSize="14sp"
            android:buttonTint="@color/fg_white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
